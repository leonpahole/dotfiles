// Place your key bindings in this file to override the defaults
[
  // tmux-like navigation
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft",
    "when": "vim.mode === 'Normal' || vim.mode === 'Visual'"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight",
    "when": "vim.mode === 'Normal' || vim.mode === 'Visual'"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp",
    "when": "vim.mode === 'Normal' || vim.mode === 'Visual'"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown",
    "when": "vim.mode === 'Normal' || vim.mode === 'Visual'"
  },
  // tab to select items in file explorer rather than enter
  {
    "key": "enter",
    "command": "-list.select",
    "when": "listFocus && !inputFocus && !treestickyScrollFocused"
  },
  {
    "key": "tab",
    "command": "list.select",
    "when": "listFocus && !inputFocus && !treestickyScrollFocused"
  },
  // use shift + L to switch editors
  {
    "key": "shift+l",
    "command": "workbench.action.nextEditor",
    "when": "vim.mode === 'Normal'"
  },
  {
    "key": "shift+h",
    "command": "workbench.action.previousEditor",
    "when": "vim.mode === 'Normal'"
  },
  // scroll up and down quick results with ctrl + arrows
  {
    "key": "ctrl+j",
    "command": "workbench.action.quickOpenSelectNext",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.quickOpenSelectPrevious",
    "when": "inQuickOpen"
  },
  // scroll up and down intellisense with ctrl + arrows
  {
    "key": "ctrl+j",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetVisible"
  },
  {
    "key": "ctrl+k",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetVisible"
  },
  {
    "key": "ctrl+b j",
    "command": "workbench.action.terminal.resizePaneDown",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+b k",
    "command": "workbench.action.terminal.resizePaneUp",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+b h",
    "command": "workbench.action.increaseViewWidth"
  },
  {
    "key": "ctrl+b l",
    "command": "workbench.action.decreaseViewWidth"
  },
  {
    "key": "ctrl+j",
    "command": "search.focus.nextInputBox",
    "when": "searchViewletFocus && inputBoxFocus"
  },
  {
    "key": "ctrl+k",
    "command": "search.focus.previousInputBox",
    "when": "searchViewletFocus"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.scm.action.focusNextResourceGroup",
    "when": "focusedView == workbench.scm"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.scm.action.focusPreviousInput",
    "when": "focusedView == workbench.scm"
  },
  {
    "key": "ctrl+b i",
    "command": "workbench.action.terminal.split",
    "when": "terminalFocus"
  },
  // Move to the terminal on the left (Ctrl + H)
  {
    "key": "ctrl+h",
    "command": "workbench.action.terminal.focusPreviousPane",
    "when": "terminalFocus"
  },

  // Move to the terminal on the right (Ctrl + L)
  {
    "key": "ctrl+l",
    "command": "workbench.action.terminal.focusNextPane",
    "when": "terminalFocus"
  }
]
